// Se ejecuta POR CADA FILA. Bloquea campos si cc_edit=0 + oculta botones borrar
// ====================================================================

$cc_edit_val = {cc_edit};
error_log("ðŸ”’ form_recomendantes onLoadRecord: id_recom={id_recom} cc_edit=$cc_edit_val");

if ($cc_edit_val == 0 || $cc_edit_val === '0') {
    error_log("ðŸ”’ form_recomendantes onLoadRecord: Bloqueando campos para id_recom={id_recom}");
    // sc_field_disabled_record bloquea campos POR FILA
    sc_field_disabled_record("nombre_=true;apellido_p_=true;apellido_m_=true;correo_=true");
}

// JavaScript para ocultar botones borrar: movido a onApplicationInit (una sola vez)
